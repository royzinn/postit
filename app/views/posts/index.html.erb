<p class="lead">All Posts</p>
<hr></hr>

<% @posts.each do |p| %>
  <div class="row">
  	<div class="span1 well text-center"> Votes</div>
    <div class="span9 well">
    	<h5><%= link_to p.title, p.url, :target => '_blank' %></h5>
    	<p><%= p.description %></p>
    	<p>
    		<span class="quiet">posted by</span>
    		<%= link_to p.user.username %>
    		<small>at <%= p.created_at %></small>
    	</p>
    	<small>
    		<span><%= link_to "#{p.comments.count} comments", post_path(p) %></span>
    	</small>
    </div>
  </div>
<% end %>
