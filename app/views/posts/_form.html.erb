<%= form_for @post do |f| %>
	<%= f.label :url %>
	<%= f.text_field :url %>
	</br>
	<%= f.label :title %>
	<%= f.text_field :title %>
	</br>
	<%= f.label :description %>
	<%= f.text_area :description, rows: 5 %>
	</br>
	<%= f.label :category_ids, 'Categories' %>
	<%= f.select :categoccry_ids, Category.all.collect {|c| [ c.name, c.id ] }, {}, multile: 'multiple' %>
	</br>
	<%= f.submit @post.new_record? ? "Create Post" : "Update Post", :class => "btn btn-primary" %>
<% end %>