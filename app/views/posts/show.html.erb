<div class = "row">
	<div class="span12">
		<p><%= link_to @post.title, @post.url, target: "_blank" %></p>
		<hr></hr>
		<p><%= @post.description %></p>
		<hr></hr>
		<% if @comment.errors.any? %>
			<div class="row">
				<div class="span4 alert alert-error" %>
				      <a class="close" data-dismiss="alert">&#215;</a>
				      <%= content_tag :div, @comment.errors.full_messages.join(", ") %>
				</div>
			</div>
		<% end %>
		<%= form_for [@post, @comment] do |f| %>
			<%= f.label :body, "Leave a comment" %>
			<%= f.text_area :body, rows: 3 %>
			</br>
			<%= f.submit "Add Comment", :class => "btn btn-primary" %>
		<% end %>
		<hr></hr>
		
		<% if @comments %>
			<h5>Comments:</h5>
			<% @comments.each do |c| %>
				<div class"row">
					<div class="span1 well text-center">
						votes
					</div>
					<div class="span9 well">
						<em><%= c.body %></em>
						</br>
						<span class="quiet">by</span> <%= link_to c.user.username %> <small>at <%= c.created_at %></small>

					</div>
				</div>
			<% end %>
		<% end %>
	</div>
	
</div>



	